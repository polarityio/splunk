{{#if (eq details.searchType "meta")}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
      <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
      <span class="integration-text-color">Indexes: {{details.results.length}}</span>
    </span>
{{else}}
  {{#if (gt details.results.length 0)}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
      <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
      <span class="integration-text-color">Results: {{details.results.length}}</span>
    </span>
  {{/if}}
  {{#each details.tags as |tag|}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
      <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
      <span class="integration-text-color">
        {{#if (and block.userOptions.includeFieldNameInSummary tag.field)}}
          {{tag.field}}:
        {{/if}}
        {{tag.value}}
      </span>
    </span>
  {{/each}}
{{/if}}

